extends layout

block content
  nav(class='navbar navbar-light bg-faded')
    a(class='navbar-brand col-md-5', href='/') Home
    h1(class='navbar-text') Room: #{title}

  div(id='chat-panel', class='panel panel-default')
    div(id= 'message-holder', class= 'panel panel-body')
      ul(id='messages')
    div(id='chatbox-wrapper', class= 'panel panel-footer')
      form(
        action="",
        id="chatForm",
        class="form-group"
        )
        input(
          id="m",
          class='chatbox form-control',
          autocomplete="off",
          placeholder="Enter a message",
          autofocus="autofocus"
        )